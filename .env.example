# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database Configuration
# Replace with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/ecommerce
MONGODB_DB_NAME=ecommerce

# JWT Configuration
# Required: Generate strong secrets for production (use: openssl rand -base64 32)
JWT_ACCESS_SECRET=your-access-secret-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# JWT Verification (Optional - defaults to JWT_ACCESS_SECRET if not set)
JWT_VERIFICATION_SECRET=

# Security Configuration
BCRYPT_SALT_ROUNDS=10

# Logging Configuration
LOG_LEVEL=debug

# Email Configuration (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=E-Commerce API
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration (Optional - for Google login feature)
# Get credentials from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
